<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <script src="https://cdn.bootcdn.net/ajax/libs/echarts/4.7.0/echarts.min.js"></script>
</head>

<body>
  <div id="hosts" style="height: 400px;"></div>

  <script type="text/javascript">
    let hosts = echarts.init(document.getElementById('hosts'), 'light')
    hosts.setOption({
      grid: {
        left: "10%",
        bottom: "35%"
      },
      dataZoom: [
        {type: "slider"}
      ],
      tooltip: {},
      xAxis: {
        axisLabel: {
          interval: 0,
          rotate: 45
        },
        data: <%= favorite_hosts.keys %>
      },
      yAxis: {},
      series: [{
        type: 'bar',
        data: <%= favorite_hosts.values %>
      }]
    });

    window.addEventListener("resize", () => {
      hosts.resize();
    });
  </script>
</body>

</html>